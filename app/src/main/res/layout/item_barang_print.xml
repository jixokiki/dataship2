<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkBoxPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNamaBarangPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewJumlahBarangPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Barang" />

        <TextView
            android:id="@+id/textViewHargaPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga" />

        <TextView
            android:id="@+id/textViewSupplierPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplier" />

        <TextView
            android:id="@+id/textViewQuantityPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity" />

        <TextView
            android:id="@+id/textViewStatusPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView
            android:id="@+id/textViewTimestampPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timestamp" />
    </LinearLayout>
</LinearLayout>
