<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupervisorActivity"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PURCHASING"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/warehouseText"/>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/warehouseText"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"/>

        <ListView
            android:id="@+id/listViewBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/warehouseText"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:backgroundTint="#e3dfde"/>

        <Button
            android:id="@+id/buttonAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cetak PDF"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/listViewBarang"
            android:layout_marginTop="16dp"
            android:backgroundTint="#75331e"/>

    </RelativeLayout>
</ScrollView>
