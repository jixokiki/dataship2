<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Barang"
        android:textSize="16sp"
        android:layout_below="@id/textViewNama"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewKode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Barang"
        android:textSize="16sp"
        android:layout_below="@id/textViewJumlah"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editTextHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Barang"
        android:layout_below="@id/textViewKode"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editNamaSuplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Suplier"
        android:layout_below="@id/editTextHarga"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkBoxSetuju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setuju"
        android:layout_below="@id/editNamaSuplier"
        android:layout_marginTop="8dp" />
</RelativeLayout>
